<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Pressed-->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/> <!-- KenarlarÄ± daha yuvarlak hale getirdim -->
            <gradient
                android:startColor="#B06A17"
                android:endColor="#8A4B08"
                android:angle="90"/>
            <stroke android:width="2dp" android:color="#8A4B08"/>

            <padding android:left="12dp" android:right="12dp" android:top="10dp" android:bottom="10dp"/>
        </shape>
    </item>


    <!-- Normal State-->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <gradient
                android:startColor="#E69530"
                android:endColor="#B06A17"
                android:angle="90"/>
            <stroke android:width="3dp" android:color="#9A5B10"/>
            <padding android:left="16dp" android:right="16dp" android:top="12dp" android:bottom="12dp"/>
        </shape>
    </item>


</selector>
