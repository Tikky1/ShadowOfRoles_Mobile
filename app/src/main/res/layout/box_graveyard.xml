<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/graveyard_box_style">

    <TextView
        android:id="@+id/graveyard_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:textColor="@color/white" />

    <TextView
        android:id="@+id/graveyard_cause_of_death"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/graveyard_player_name"
        android:textColor="#D3D3D3" />

    <TextView
        android:id="@+id/graveyard_time_of_death"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/graveyard_cause_of_death"
        android:textColor="#D3D3D3" />

</RelativeLayout>