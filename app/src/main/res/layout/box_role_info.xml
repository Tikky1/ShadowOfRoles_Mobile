<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/text_background"
        android:orientation="vertical">

        <!-- Current Role Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/current_role_header"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Current Role:"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/all_role_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="@color/white" />

        <!-- Team Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/all_team_header"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Team:"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/all_team_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/role_book_neutral"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="@color/white" />

        <!-- Goal Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/all_goal_header"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Goal:"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/all_goal_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/assassin_goal"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="@color/white" />

        <!-- Ability Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/all_ability_header"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Abilities:"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/all_ability_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/assassin_abilities"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="4dp"
            android:background="@color/white" />

        <!-- Attributes Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/all_attributes_header"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Attributes:"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/all_attributes_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/assassin_attributes"
                android:textColor="@color/white"
                android:paddingBottom="16dp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>