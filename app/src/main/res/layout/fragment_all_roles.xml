<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/roles_recycler_view"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/text_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/all_role_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/assassin_name"
        android:textColor="@color/white"
        android:background="@drawable/text_background"
        app:layout_constraintBottom_toTopOf="@+id/all_role_info_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roles_recycler_view" />

    <RelativeLayout
        android:id="@+id/all_role_info_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/text_background"
        android:maxWidth="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Team Header -->
        <TextView
            android:id="@+id/all_team_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Team:"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold" />

        <!-- Goal Header -->
        <TextView
            android:id="@+id/all_goal_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/all_team_text"
            android:layout_centerHorizontal="true"
            android:text="Goal:"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold" />

        <!-- Ability Header -->
        <TextView
            android:id="@+id/all_ability_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/all_goal_text"
            android:layout_centerHorizontal="true"
            android:text="Abilities:"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold" />

        <!-- Attributes Header -->
        <TextView
            android:id="@+id/all_attributes_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/all_ability_text"
            android:layout_centerHorizontal="true"
            android:text="Attributes:"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold" />

        <!-- Team Text -->
        <TextView
            android:id="@+id/all_team_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/all_team_header"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/role_book_neutral"
            android:textColor="@color/white" />

        <!-- Goal Text -->
        <TextView
            android:id="@+id/all_goal_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/all_goal_header"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/assassin_goal"
            android:textColor="@color/white" />

        <!-- Ability Text -->
        <TextView
            android:id="@+id/all_ability_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/all_ability_header"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/assassin_abilities"
            android:textColor="@color/white" />

        <!-- Attributes Text -->
        <TextView
            android:id="@+id/all_attributes_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/all_attributes_header"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/assassin_attributes"
            android:textColor="@color/white" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>