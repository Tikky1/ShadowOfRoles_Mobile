<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background0"
    android:padding="16dp">

    <ListView
        android:id="@+id/hosting_lobby_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/hosting_start_game_button"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="@drawable/text_background_white"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hosting_start_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_game"
        android:textSize="18sp"
        android:padding="12dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_style"
        android:textColor="@android:color/white"/>

</RelativeLayout>
